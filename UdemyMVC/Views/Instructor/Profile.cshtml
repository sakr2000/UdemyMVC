@model ApplicationModel  
@{
    string path = Model.Image ;
    string newPath = path.Replace("+", "");
}


    <section class="container-fluid">
        <div class="container-fluid py-5 h-100">
            <div class="row d-flex justify-content-center">
                <div class="col-12">
                    <div class="card">
                    <div class="rounded-top text-white d-flex flex-row" style="background-color:#b8dfff; height:200px;">
                            <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;"> 

                                <img src="@newPath"
                                     alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                                     style="width: 150px; z-index: 1">
                              
                            </div>
                      
                            <div class="ms-3" style="margin-top: 130px;">
                            <h5 style="color:#06284b">@Model.UserName</h5>
                            <p style="color:#06284b">@Model.Address</p>
                            </div>
                        </div>
                    
                        <div class="p-4 text-black bg-body-tertiary">
                           <div class="d-flex justify-content-between">
                            <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-dark text-body" data-mdb-ripple-color="dark" style="z-index: 1;
height:40px;">
                                Edit profile
                            </button>
                           
                        
                        
                            <div class="text-center py-1 text-body">
                                <div>
                                    <p class="mb-1 h5">@ViewBag.count</p>
                                    <p class="small text-muted mb-0">Courses</p>
                                </div>
                            </div>
                        </div>
                            <div class="card-body p-4 text-black">
                                <div class="mb-5  text-body">
                                    <p class="lead fw-normal mb-1">About</p>
                                    <div class="p-4 bg-body-tertiary">
                                        <p class="font-italic mb-1">@Model.Field</p>
                                        <p class="font-italic mb-1">Lives in @Model.Address</p>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-4 text-body">
                                    <p class="lead fw-normal mb-0">Courses</p>
                                </div>
            @*********************@
                                <div class="container-fluid py-4">
                            <div class="row g-4 justify-content-center">
                                @if (ViewBag.Courses != null)
                                {
                                    @foreach (var item in ViewBag.Courses)
                                    { 
                                
                                        string path1 = @item.CourseImage;
                                        string newpath1 = path.Replace("+", "");

                                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                                            <div class="course-item bg-light">
                                                <div class="position-relative overflow-hidden">
                                                    <img class="img-fluid" src="@newpath1" alt="">
                                                    <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                                        <a href="#" class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">Read More</a>
                                                        <a href="#" class="flex-shrink-0 btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;">Join Now</a>
                                                    </div>
                                                </div>
                                                <div class="text-center p-4 pb-0">
                                                    <h3 class="mb-0">@item.Price</h3>
                                                    <div class="mb-3">
                                                        <small class="fa fa-star text-primary"></small>
                                                        <small class="fa fa-star text-primary"></small>
                                                        <small class="fa fa-star text-primary"></small>
                                                        <small class="fa fa-star text-primary"></small>
                                                        <small class="fa fa-star text-primary"></small>
                                                        <small>(123)</small>
                                                    </div>
                                                    <h5 class="mb-4">@item.CourseName</h5>
                                                </div>
                                                <div class="d-flex border-top">
                                                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-user-tie text-primary me-2"></i>@Model.UserName</small>
                                                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i>@item.Hours</small>
                                                    <small class="flex-fill text-center py-2"><i class="fa fa-user text-primary me-2"></i>30 Students</small>
                                                </div>
                                            </div>
                                        </div>

                                    }}
                                </div>
                                    </div>
                                @*****************@

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
    </section>


